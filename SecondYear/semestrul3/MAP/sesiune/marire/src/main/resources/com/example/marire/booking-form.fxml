<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.marire.controller.BookingFormController">
    <VBox prefHeight="600" prefWidth="400" spacing="15" AnchorPane.rightAnchor="60" AnchorPane.leftAnchor="60" AnchorPane.bottomAnchor="40">
        <Label text="Your booking:"/>
        <ListView fx:id="bookingsListView" VBox.vgrow="ALWAYS" />

        <Label text="License Plate Number:"/>
        <TextField fx:id="licensePlateField"/>

        <Label text="Booking Duration (minutes):"/>
        <TextField fx:id="durationField"/>

        <Button text="Send Request" onAction="#handleSendRequest"/>
    </VBox>
</AnchorPane>
